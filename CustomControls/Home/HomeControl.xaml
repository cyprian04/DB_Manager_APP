<UserControl x:Class="GUI_Database_app.CustomControls.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI_Database_app.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <UserControl.Resources>
        <Style x:Key="FeatureTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="AliceBlue"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="Margin" Value="50,20,50,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Width" Value="355"/>
        </Style>
        
        <Style  x:Key="IconIntroductionStyle" TargetType="Image">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="20,40,0,0"/>
        </Style>

        <Style x:Key="IntroductionTextStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="30,30,30,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="AliceBlue"/>
        </Style>
    </UserControl.Resources>


    <Border CornerRadius="10,0,10,0"
                BorderThickness="5,5,0,0">

        <Border.Background>
            <VisualBrush>
                <VisualBrush.Visual>
                    <MediaElement x:Name="HomeMediaVideo" 
                                      Source="./Resources/home-video.mp4"
                                      LoadedBehavior="Manual" 
                                      MediaEnded="HomeMediaVideo_MediaEnded"/>
                </VisualBrush.Visual>
            </VisualBrush>
        </Border.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border CornerRadius="9,9,9,9"
                    Opacity="0.75" 
                    Grid.Column="0"
                    Margin="20,20,20,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                        <GradientStop Color="#A89CAC" Offset="0"/>
                        <GradientStop Color="#474973" Offset="0.7"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <TextBlock Text="Welcome to Control - Your Database Management app"
                               FontSize="17"
                               Foreground="Aquamarine"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               FontFamily="Montserrat"
                               FontWeight="DemiBold"
                               Margin="0,20,0,15"/>

                    <Image Source="/Resources/logo.png"
                           Width="100"
                           Height="100"
                           HorizontalAlignment="Center"/>

                    <TextBlock Text="With it you have the power to seamlessly connect to your XAMPP database and take control of your data just like you would with phpMyAdmin. Our user-friendly interface make database management a breeze."
                               FontSize="16"
                               Foreground="AliceBlue"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               FontFamily="Montserrat"
                               Margin="10,20,10,0"
                               TextWrapping="Wrap"
                               FontWeight="DemiBold"/>

                    <TextBlock Text="Features"
                               Margin="0,10,0,0"
                               HorizontalAlignment="Center"
                               Foreground="Aquamarine"
                               FontWeight="DemiBold"
                               FontSize="15"/>

                    <TextBlock Text="Database Connection: Connect effortlessly to your XAMPP database using the provided credentials."
                               Style="{StaticResource FeatureTextStyle}"/>

                    <TextBlock Text="Table Management: View all your database tables in an organized manner. Add, edit, or delete records with ease"
                               Style="{StaticResource FeatureTextStyle}"/>

                    <TextBlock Text="SQL Query: Write and execute SQL queries directly within the app. Get real-time results and insights into your data."
                               Style="{StaticResource FeatureTextStyle}"/>

                    <TextBlock Text="Database Connection: Connect effortlessly to your XAMPP database using the provided credentials. Your data's security is our priority."
                               Style="{StaticResource FeatureTextStyle}"/>


                    <Button x:Name="GetStaredBorder"
                            BorderThickness="0"
                            FontSize="16"
                            Content="Get Started"
                            FontFamily="Montserrat"
                            Foreground="AliceBlue"
                            Cursor="Hand"
                            Margin="0,30,0,0"
                            Click="btn_GetStarted"
                            Visibility="Visible">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Aquamarine"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="100" Height="40" 
                                        CornerRadius="10"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" 
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

            </Border>

            <Border x:Name="InfoContentBorder" 
                    CornerRadius="9,9,9,9"
                    Opacity="0.75" 
                    Grid.Column="1"
                    Margin="20,20,20,20"
                    Visibility="Hidden">
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                        <GradientStop Color="#A89CAC" Offset="0"/>
                        <GradientStop Color="#A5CAD2" Offset="0.7"/>
                    </LinearGradientBrush>
                </Border.Background>


                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">

                        <TextBlock Text="Introduction"
                                   FontSize="17"
                                   Foreground="Aquamarine"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="Montserrat"
                                   FontWeight="DemiBold"
                                   Margin="0,20,0,10" />
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                           <StackPanel Grid.Column="0">
                               
                              <Image Source="/Resources/icon-home.png"
                                     Style="{StaticResource IconIntroductionStyle}"
                                     />
                              
                              <Image Source="/Resources/icon-view.png"
                                     Style="{StaticResource IconIntroductionStyle}"
                                     />
                              
                              <Image Source="/Resources/icon-sql.png"
                                     Style="{StaticResource IconIntroductionStyle}"
                                     />
                              
                              <Image Source="/Resources/icon-gear.png"
                                     Style="{StaticResource IconIntroductionStyle}"
                                     />
                           </StackPanel>
                           
                           <StackPanel Grid.Column="1">

                              <TextBlock Text="Home Icon represents window where basic informations are provided."
                                         Style="{StaticResource IntroductionTextStyle}"
                                         Margin="30,35,30,0"/>
                               
                              <TextBlock Text="View Icon represents  window where you can see tables inside your currently selected database."
                                         Style="{StaticResource IntroductionTextStyle}"/>
                               
                              <TextBlock Text="Sql Icon represents window where you can insert Sql Commands onto your database with returened result."
                                         Style="{StaticResource IntroductionTextStyle}"/>
                               
                              <TextBlock Text="Gear Icon represents settings window where you set and specify your connection to database you choose."
                                         Style="{StaticResource IntroductionTextStyle}"/>
                               
                              <TextBlock Text="IMPORTANAT: if database connection is not set and not turn on in settings window, then content in other windows will prevail empty."
                                         Foreground="Purple"
                                         Style="{StaticResource IntroductionTextStyle}"/>

                        </StackPanel>
                    </Grid>
                    
                </Grid>
                    
            </Border>

        </Grid>

    </Border>

</UserControl>
