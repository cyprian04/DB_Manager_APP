<Window x:Class="GUI_Database_app.LoginForm" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=" DB Manager" Height="300" Width="400" WindowStartupLocation="CenterScreen" Background="#272537">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="197" Margin="82,42,93,30" Width="217">
            <TextBlock Text="Username:" FontSize="15" Foreground="white" Margin="5"/>
            <TextBox Name="UserName" VerticalContentAlignment="Center" Margin="10,5" Height="25"/>
            <TextBlock Text="Password:" FontSize="15" Foreground="white" Margin="5"/>
            <PasswordBox Name="UserPass" VerticalContentAlignment="Center" Margin="10,5" Height="25"/>
            <Border BorderBrush="GreenYellow" BorderThickness="1" CornerRadius="8" Background="GreenYellow" Height="46" Margin="10,0">
                <Button Content="Login" Margin="9,5" Click="Button_Login_Click" Background="GreenYellow" BorderThickness="0" Height="35"/>
            </Border>
            <TextBlock Name="tbLoginResult" HorizontalAlignment="Center" TextWrapping="wrap" Text="" FontStyle="Italic" Foreground="red"  VerticalAlignment="Top"  Height="19" Width="202" Margin="10,0,5,0"/>
        </StackPanel>
    </Grid>
</Window>
